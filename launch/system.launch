<?xml version="1.0"?>
<launch>
    <arg name="from_bag" default="false"/>       
    <!-- Hyperspectral Cameras -->
    <include file="$(find hyper_drive)/launch/master.launch">
        <arg name="use_imec" value="true" />
        <arg name="use_ximea" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="use_bag" value="true"/>
    </include> 
    <!-- RGB HD Camera -->
    <include file="$(find avt_vimba_camera)/launch/mono_camera.launch" unless="$(arg from_bag)">
        <arg name="guid" value="DEV_1AB22C025217" />
        <arg name="pixel_format" value="RGB8"/>
        <arg name="height" value="2054" />   
        <!-- <arg name="width" value="2464" /> This param causes issues when set -->
        <arg name="offset_x" value="0" />
        <arg name="offset_y" value="0" />          
    </include> 
    <node pkg="hyper_drive" type="correct_rgb.py" name="alvium_distort" output="screen"/>
    <node pkg="image_transport" type="republish" name="alvium_process" args="_image_transport:=compressed in:=/camera/image_raw raw out:=/camera/image_raw" output="screen" if="$(arg from_bag)"/>

    <!-- Start HSI Processor -->
    <!-- Point Spectrometers -->
    <!-- <include file="$(find spectrometer_drivers)/launch/ibsen.launch">
    </include> -->
    <!-- <node pkg="rosbag" type="record" name="rosbag_record_cam"
          args="record -O cam_imgs /camera/image_raw /ximea/raw_data /imec/raw_data" /> -->
</launch>